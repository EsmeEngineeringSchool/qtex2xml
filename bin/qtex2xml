    outfile.write(tab(indent)+oxml("xml",("version","1.0"),("encoding","UTF-8"),bal="?")+'\n')
    outfile.write(tab(indent)+oxml("quiz")+'\n')
#--------------------------------------------------------------------------------------------------
def xml_footerquiz(outfile,indent=0):
    outfile.write(tab(indent)+cxml("quiz"))
