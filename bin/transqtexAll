#!/bin/bash
usage()
{
    echo "Usage : $(basename $0) <dir> <dirout>"
    exit 1
}
dir=$1
dirout=$2
[ -z $dirout ] && echo "you should give dir/output" && usage 
echo "qtex/category -> $dirout/category"
transqtex -i qtex/category -o $dirout/category
for file in $dir/*.qtex
do
    base=$(basename $file)
    file_en=${base::-5}_en.qtex
    echo "$base -> $file_en"
    transqtex -i qtex/$base -o $dirout/$file_en
done
